<resources>

    <!-- Base application theme. -->
    <style name="Theme.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryDark">@color/app_color</item>
        <item name="colorAccent">@color/app_color</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:statusBarColor">@color/app_color</item>
        <item name="mukeshOtpStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:fontFamily">@font/stolzl_book</item>
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/_708090</item>
        <item name="android:textColorHint">@color/_708090</item>
        <item name="android:background">@drawable/ic_round_corner_8dp</item>
    </style>

    <style name="EditTextStyleMultiline">
        <item name="android:fontFamily">@font/stolzl_book</item>
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textColor">@color/_708090</item>
        <item name="android:textColorHint">@color/_708090</item>
        <item name="android:background">@drawable/ic_round_corner_8dp</item>
    </style>

    <style name="RoundCorner50">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundCorner20">
        <item name="cornerSize">20%</item>
    </style>

    <style name="RoundCorner10">
        <item name="cornerSize">10%</item>
    </style>

    <style name="CircleImage">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ButtonTheme" parent="">
        <item name="android:background">@drawable/button_corner</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/stolzl_regular</item>
    </style>

    <!--    For Show Dialog in Full Screen-->
    <style name="DialogFullScreen">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <!--TabLayout theme-->
    <style name="Theme.MyTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/stolzl_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--TabLayout theme-->
    <style name="Theme.SimpleTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/SimpleTabLayoutTextAppearance</item>
    </style>

    <style name="SimpleTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/stolzl_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <color name="_708090">#708090</color>
</resources>