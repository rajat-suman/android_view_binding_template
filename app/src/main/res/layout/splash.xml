<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    tools:context="com.viewBindingTemplate.sample.ui.fragments.splash.Splash">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivTopLeftPipe"
        android:layout_width="wrap_content"
        app:strokeColor="@null"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_round_pipe"
        android:transitionName="view1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_round_pipe" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivBottomRightPipe"
        android:layout_width="wrap_content"
        app:strokeColor="@null"
        android:layout_height="wrap_content"
        android:rotation="180"
        android:transitionName="view2"
        android:src="@drawable/ic_round_pipe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_round_pipe" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:strokeColor="@null"
        android:src="@drawable/ic_bubble_right_cut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivTopLeftPipe"
        app:srcCompat="@drawable/ic_bubble_right_cut" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="wrap_content"
        app:strokeColor="@null"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bubble_left_cut"
        app:layout_constraintBottom_toTopOf="@id/ivBottomRightPipe"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_bubble_left_cut" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivCenterBubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:strokeColor="@null"
        android:src="@drawable/ic_bubble_transparent"
        android:transitionName="view4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_bubble_transparent" />

</androidx.constraintlayout.widget.ConstraintLayout>